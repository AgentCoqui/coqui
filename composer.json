{
    "name": "carmelosantana/coqui",
    "description": "Terminal AI agent REPL with multi-model orchestration and persistent sessions",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Carmelo Santana"
        }
    ],
    "require": {
        "php": "^8.4",
        "ext-pdo_sqlite": "*",
        "carmelosantana/php-agents": "@dev",
        "symfony/console": "^7.0",
        "symfony/http-client": "^7.0"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "phpstan/phpstan": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Coqui\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Coqui\\Tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "../php-agents"
        }
    ],
    "bin": [
        "bin/coqui"
    ],
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "pest",
        "analyse": "phpstan analyse"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
